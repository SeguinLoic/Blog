---
import '../styles/global.css';
import Header from '../components/Header.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer.astro';

import { getCollection } from 'astro:content';
const books = await getCollection('lectures');

const page = "inspiration";
---

<BaseLayout page={page}>
    <div class="container">
        <Header />
        <div class="containerCopains">
            <h2>Le coin des copains</h2>
            <ul class="copains">
                <li><a href="https://audioblog.arteradio.com/blog/261344/lectus-podcast" target="_blank">Lectus Podcast</a></li>
            </ul>
            <br/>
            <h2>Bibliothèque</h2>
            <div class="containerLivres">
                <span class="annee">2026</span>
                <ul class="livres">
                    {books.map(book => (
                        <li>
                            <div class="couverture"><img src={book.data.image} /></div>
                            <div class="infos">{book.data.name} <span class="auteur">{book.data.author}</span></div>
                        </li>
                    ))}
                </ul>
                <span class="annee">2025</span>
                <ul class="livres">
                    <li>
                        <div class="couverture"><img src="/livres/the-great-game.jpg" /></div>
                        <div class="infos">The Great Game <span class="auteur">Peter Hopkirk</span></div>
                    </li>
                    <li>
                        <div class="couverture"><img src="/livres/aylal.jpg" /></div>
                        <div class="infos">Aylal, une année en Mongolie <span class="auteur">Linda Gardelle</span></div>
                    </li>
                    <li>
                        <div class="couverture"><img src="/livres/ten-years.jpg" /></div>
                        <div class="infos">Ten Years A Nomad <span class="auteur">Matthew Kepnes</span></div>
                    </li>
                    <li>
                        <div class="couverture"><img src="/livres/1984.jpg" /></div>
                        <div class="infos">1984 <span class="auteur">George Orwell</span></div>
                    </li>
                    <li>
                        <div class="couverture"><img src="/livres/conquerant.jpg" /></div>
                        <div class="infos">Conquérant de l'impossible <span class="auteur">Mike Horn</span></div>
                    </li>
                    <li>
                        <div class="couverture"><img src="/livres/atomic.jpg" /></div>
                        <div class="infos">Atomic Habits <span class="auteur">James Clear</span></div>
                    </li>
                    <li>
                        <div class="couverture"><img src="/livres/ikigai.jpg" /></div>
                        <div class="infos">Ikigai <span class="auteur">Héctor Garcia et Francesc Miralles</span></div>
                    </li>
                    <li>
                        <div class="couverture"><img src="/livres/homme-rune-t1.jpg" /></div>
                        <div class="infos">Le Cycle Des Démons : L'Homme Rune <span class="auteur">Peter V. Brett</span></div>
                    </li>
                    <li>
                        <div class="couverture"><img src="/livres/homme-rune-t2.jpg" /></div>
                        <div class="infos">Le Cycle Des Démons : La Lance Du Désert <span class="auteur">Peter V. Brett</span></div>
                    </li>
                    <li>
                        <div class="couverture"><img src="/livres/careless.jpg" /></div>
                        <div class="infos">Careless People <span class="auteur">Sarah Wynn-Williams</span></div>
                    </li>
                    <li>
                        <div class="couverture"><img src="/livres/caucase.jpg" /></div>
                        <div class="infos">Au détour du Caucase <span class="auteur">Clara Arnaud</span></div>
                    </li>
                    <li>
                        <div class="couverture"><img src="/livres/faucheuse.jpg" /></div>
                        <div class="infos">La Faucheuse <span class="auteur">Neal Shusterman</span></div>
                    </li>
                </ul>
            </div>
        </div>
        <Footer />
    </div>
</BaseLayout>

<style>
    .containerCopains {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        padding: 40px 24px 0px;
    }
    .containerCopains h2 {
        margin: 0px;
    }
    .containerLivres {
        padding-top: 16px;
    }
    span.annee {
        display: flex;
        margin-bottom: 16px !important;
    }
    ul.livres {
        display: flex;
        list-style: none;
        padding: 0px;
        gap: 24px;
        margin: 0px;
        flex-wrap: wrap;
    }
    ul.livres li {
        display: flex;
        width: calc(50% - 12px);
        flex-direction: row;
        align-items: flex-start;
        font-weight: 600;
        font-size: .9em;
    }
    .couverture {
        height: auto;
    }
    ul.livres li img {
        width: 120px;
    }
    .infos {
        display: flex;
        flex-direction: column;
        padding: 0px 12px;
    }
    .auteur {
        font-weight: 400;
        font-style: italic;
    }
    @media screen and (max-width: 768px) {
        .containerCopains {
            padding: 24px 16px 0;
        }
    }
    @media screen and (max-width: 688px) {
        .couverture {
            height: auto;
            width: 130px;
            margin: 0px;
        }
        ul.livres li {
            width: 100%;
            flex-direction: row;
        }
        .infos {
            display: flex;
            flex-direction: column;
            width: 100%;
            padding: 16px;
        }
    }
</style>