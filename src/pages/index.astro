---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import ShortBlogPost from '../components/ShortBlogPost.astro';
import Footer from '../components/Footer.astro';

import { Image } from 'astro:assets';
import myImage from '../assets/Mongolia-1.jpg';

const page = "home";
const posts = await Astro.glob('./posts/*.mdx', { eager: true });
posts.sort((a, b) => Date.parse(b.frontmatter.pubDate) - Date.parse(a.frontmatter.pubDate));
---

<BaseLayout page={page}>
    <Header />
    <Navigation />
    <main>
        <Image src={myImage} />
        {posts.map((post: any) => <ShortBlogPost url={post.url} title={post.frontmatter.title} desc={post.frontmatter.description} date={post.frontmatter.pubDate.toString().slice(0,10)}  tags={post.frontmatter.tags} image={post.frontmatter.image.url} />)}
    </main>
    <Footer />
</BaseLayout>