---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import ShortBlogPost from '@components/ShortBlogPost.astro';
import Footer from '../components/Footer.astro';

const page = "home";

import { getCollection } from "astro:content";
const allBlogPosts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// const posts = Object.values(import.meta.glob('./posts/*.mdx', { eager: true }));
// posts.sort((a, b) => Date.parse(b.frontmatter.pubDate) - Date.parse(a.frontmatter.pubDate));

---

<BaseLayout page={page}>
    <Header />
    <Navigation />
    <main>
        <!-- {posts.map((post: any) => <ShortBlogPost url={post.url} title={post.frontmatter.title} desc={post.frontmatter.description} date={post.frontmatter.pubDate.toString().slice(0,10)}  tags={post.frontmatter.tags} image={post.frontmatter.image} imageAlt={post.frontmatter.imageAlt} />)} -->
        <!-- {
            allBlogPosts.map((post) => <ShortBlogPostTest title={post.data.title} desc={post.data.description} date={post.data.pubDate.toString().slice(0,10)} tags={post.data.tags} url={`/posts/${post.id}`} image={post.data.cover} />)
        } -->
        {
            allBlogPosts.map((post) => <ShortBlogPost title={post.data.title} desc={post.data.description} date={post.data.pubDate} tags={post.data.tags} url={`/posts/${post.id}`} image={post.data.cover} imageAlt={post.data.coverAlt} />)
        }
    <Footer />
</BaseLayout>