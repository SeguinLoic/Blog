---
import '../styles/global.css';
import Header from '../components/Header.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import ShortBlogPost from '../components/ShortBlogPost.astro';
import Footer from '../components/Footer.astro';
import Navigation from '../components/Navigation.astro';

const page = "home";
const posts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
---

<BaseLayout page={page}>
  <div class="col-left">
        <div class="container">
            <Header />
        </div>
  </div>
  <div class="col-right">
        <Navigation />
        <ul class="listShortPost">
            {posts.map((post: any) => <ShortBlogPost url={post.url} title={post.frontmatter.title} desc={post.frontmatter.description} date={post.frontmatter.pubDate.toString().slice(0,10)} />)}
        </ul>
        <Footer />
  </div>
</BaseLayout>

<style>
  .listShortPost, .listShortProject {
      padding: 0px;
      list-style: none;
      margin: 0px;
  }
  .listShortProject {
      display: flex;
      column-gap: 20px;
  }
  ul.listShortPost {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}
</style>