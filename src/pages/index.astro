---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import ShortBlogPost from '../components/ShortBlogPost.astro';
import Footer from '../components/Footer.astro';

import { Debug } from 'astro:components';

const page = "home";
//const posts = await Astro.glob('./posts/*.mdx', { eager: true });
//const posts = await Astro.glob('../content/posts/*.mdx', { eager: true });
// const posts = import.meta.glob('../content/posts/*.mdx', { eager: true });
// posts.sort((a, b) => Date.parse(b.frontmatter.pubDate) - Date.parse(a.frontmatter.pubDate));

const modules = import.meta.glob('../content/posts/*.mdx', { eager: true });
const posts = Object.values(modules).map(m => m.frontmatter || m);
const sortedPosts = posts.sort((a, b) => new Date(b.pubDate) - new Date(a.pubDate));

---

<Debug {posts} />

<BaseLayout page={page}>
    <Header />
    <Navigation />
    <main>
        <!-- {posts.map((post: any) => <ShortBlogPost url={post.url} title={post.frontmatter.title} desc={post.frontmatter.description} date={post.frontmatter.pubDate.toString().slice(0,10)}  tags={post.frontmatter.tags} image={post.frontmatter.image.url} />)} -->
        {sortedPosts.map((post: any) => <ShortBlogPost url={post.url} title={post.title} desc={post.description} date={post.pubDate.toString().slice(0,10)}  tags={post.tags} image={post.image} imageAlt={post.imageAlt} />)}
    <Footer />
</BaseLayout>