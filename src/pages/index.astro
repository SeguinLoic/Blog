---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import TitleSection from '../components/TitleSection.astro';
import ShortBlogPost from '../components/ShortBlogPost.astro';

const pageTitle = "Home page";
const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
---

<style>
  .listShortPost, .listShortProject {
      padding: 0px;
      list-style: none;
      margin: 0px;
  }
  .listShortProject {
      display: flex;
      column-gap: 20px;
  }
  p.about {
      line-height: 1.9em;
      padding: 40px 0px 20px;
  }
</style>

<BaseLayout pageTitle={pageTitle}>
  <p class="about">Hi, I'm a random human being. Webdesigner since 2016, I like all kind of art and especially Digital Art. I really love bouldering with friends, mostly for the fresh cold beer after the session. I just discovered that i love writing.</p>
  <TitleSection title={"My thougts"} />
  <ul class="listShortPost">
      {allPosts.map((post: any, index) => index < 3 && <ShortBlogPost url={post.url} title={post.frontmatter.title} date={post.frontmatter.pubDate} category={post.frontmatter.category} />)}
  </ul>
</BaseLayout>