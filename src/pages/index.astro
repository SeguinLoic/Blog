---
import '../styles/global.css';
import Header from '../components/Header.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import ShortBlogPost from '../components/ShortBlogPost.astro';
import Footer from '../components/Footer.astro';

const page = "home";
const posts = await Astro.glob('./posts/*.md', { eager: true });
---

<BaseLayout page={page}>
    <div class="container">
        <Header />
        <ul class="listShortPost">
            {posts.map((post: any) => <ShortBlogPost url={post.url} title={post.frontmatter.title} desc={post.frontmatter.description} date={post.frontmatter.pubDate.toString().slice(0,10)}  tags={post.frontmatter.tags} />)}
        </ul>
        <Footer />
    </div>
</BaseLayout>

<style>
  .listShortPost, .listShortProject {
      padding: 0px;
      list-style: none;
      margin: 0px;
  }
  .listShortProject {
      display: flex;
      column-gap: 20px;
  }
  ul.listShortPost {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}
</style>