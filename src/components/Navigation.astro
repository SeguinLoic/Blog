---
import ButtonContrast from "./ButtonContrast.astro"
import ButtonReturnHome from "./ButtonReturnHome.astro"
---

<style>
  .nav-links {
    display: flex;
    align-items: center;
    margin-bottom: 24px;
    position: relative;
  }
  .nav-links:after {
    content: '';
    width: 100%;
    height: 1px;
    background-color: var(--color-fg);
    position: absolute;
    bottom: 0;
    left: 0;
    opacity: 0.15;
    pointer-events: none;
  }
  .container-nav {
    display: flex;
    flex-grow: 1;
    justify-content: flex-end;
  }
</style>

<div class="nav-links">
  <ButtonReturnHome />
  <div class="container-nav">
    <ButtonContrast />
  </div>
</div>