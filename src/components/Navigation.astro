---
import ButtonContrast from "./ButtonContrast.astro"
import ButtonReturnHome from "./ButtonReturnHome.astro"

/*const posts = await Astro.glob('../pages/posts/*.md', { eager: true });
const tags = [...new Set(posts.map((post: any) => post.frontmatter.tags).flat())];*/
---
<div class="navigation">
    <div class="colLeft">
        <ButtonReturnHome />
        <!-- <ul class="tags">{tags.map((tag)=> <li class="tag"><a href={`/tags/${tag}`}>#{tag}</a></li>)}</ul>-->
    </div>
    <div class="colRight">
        <ButtonContrast />
    </div>
</div>

<style>
    .navigation {
        display: flex;
        justify-content: space-between;
        height: 40px;
        margin-top: 40px;
        position: relative;
        background-color: var(--color-3);
    }
    .colLeft {
        display: flex;
        width: 100%;
    }
    ul.tags {
        display: flex;
        list-style: none;
        margin: 0px;
        height: 100%;
        padding-left: 24px;
    }
    ul.tags li.tag {
        align-items: center;
        display: flex;
        padding-right: 8px;
    }
    ul.tags li.tag a {
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9em;
        color: #fff !important;
    }
    @media screen and (max-width: 1200px) {}
    @media screen and (max-width: 900px) {}
    @media screen and (max-width: 768px) {
        .navigation {
            margin-top: 24px;
        }
        .navigation ul.tags {
            display: none;
        }
    }
    @media screen and (max-width: 400px) {}
</style>