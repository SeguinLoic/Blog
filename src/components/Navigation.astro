<style>
    
/* nav styles */

.nav-links {
  width: 100%;
  top: 5rem;
  left: 48px;
  margin: 0;
}

.nav-links a {
  display: block;
  text-align: center;
  padding: 10px 0;
  text-decoration: none;
  font-weight: 600;
  font-size: 14px;
  color: #3f3f3f;
}

.nav-links a:hover,
.nav-links a:focus {
  color: #000;
}

.expanded {
  display: unset;
}



button#contraste {
    border: 1px solid red;
    padding: 8px !important;
    background-color: transparent;
    border-radius: 4px;
}
button#contraste img.icon {
    width: 24px;
    height: 24px;
}
button#contraste[aria-label="Thème sombre"] .icon-dark {
    display: none;
}
button#contraste[aria-label="Thème clair"] .icon-light {
    display: none;
}

@media screen and (min-width: 636px) {
  .nav-links {
    display: block;
    position: static;
    width: auto;
    background: none;
  }

  .nav-links a {
    display: inline-block;
    padding: 10px;
  }

}
</style>

<div class="nav-links">
    <!-- <a href="/">Home</a>
    <a href="/writing/">Writing</a>-->
    <button type="button" data-theme-toggle aria-label="Change to light theme" id="contraste">
      <img class="icon icon-light" src="/icon-moon.svg"/>
      <img class="icon icon-dark" src="/icon-sun.svg"/>
    </button>
</div>