<button type="button" data-theme-toggle aria-label="Change to light theme" class="contraste">
    <img class="icon icon-light" src="/icon-moon.svg"/>
    <img class="icon icon-dark" src="/icon-sun.svg"/>
</button>

<style>
  button.contraste {
    display: flex;
    justify-content: center;
    align-items: center;
    border: none;
    padding: 0px !important;
    background-color: transparent;
    position: relative;
    cursor: pointer;
    height: 100%;
    aspect-ratio: 1/1;
  }
  button.contraste:before {
    content: '';
    width: 100%;
    height: 100%;
    background-color: var(--color-fg);
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;
    transition: all 0.3s;
    pointer-events: none;
  }
  button.contraste:hover::before {
    opacity: 0.05;
  }
  button.contraste img.icon {
    width: 22px;
    height: 22px;
  }
  button.contraste[aria-label="Thème sombre"] .icon-dark {
    display: none;
  }
  button.contraste[aria-label="Thème clair"] .icon-light {
    display: none;
  }
  @media screen and (min-width: 900px ){
    body>.col-left .contraste {
      display: none;
    }
  }
</style>