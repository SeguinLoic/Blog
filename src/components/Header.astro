---
import Navigation from "./Navigation.astro"
---

<header>
    <div class="container">
        <div class="logo">
            <a href="/">
                <img src="/logo-blog-ok.png"/>
                <!--One Human's Adventures-->
            </a>
        </div>
        <Navigation />
    </div>
</header>

<style>
    header {
        display: flex;
        position: sticky;
        padding-top: 48px;
        width: 100%;
    }
    header .container {
        position: sticky;
        width: 100%;
        top: 48px;
        display: flex;
        flex-direction: row;
        align-items: flex-end;
    }
    .logo {
        display: flex;
        align-items: flex-start;
        flex-direction: column;
        justify-content: center;
        position: relative;
        max-width: 180px;
    }
    .logo a {
        font-size: 1.6em;
        line-height: 1.2em;
        font-weight: 500;
        text-decoration: none;
        color: #000;
    }
    .logo a img {
        width: 270px;
    }
    @media screen and (max-width: 768px) {
        header {
            padding: 40px 0;
            width: 100%;
            flex-direction: column;
        }
    }
</style>