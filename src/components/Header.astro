---
import Navigation from './Navigation.astro';
---

<style>
    header {
        display: flex;
        position: sticky;
        padding: 48px 0px;
        width: 30%;
        flex-direction: column;
        justify-content: flex-end;
    }

    header .container {
        position: sticky;
        width: 100%;
        bottom: 48px;
    }
    header nav {
        display: flex;
    }
    .Logo {
        display: flex;
        align-items: flex-start;
        flex-direction: column;
        justify-content: center;
    }
    .Logo a {
        font-size: 32px;
        line-height: 1.2em;
        font-weight: 600;
        text-decoration: none;
        color: #000;
        padding-bottom: 16px;
    }
    .Logo p {
        margin: 0px;
        font-size: 0.9em;
        padding-top: 4px;
    }

    @media screen and (max-width: 768px) {
        header {
            padding: 40px 0;
            width: 100%;
            flex-direction: column;
        }
    }
</style>

<header>
    <div class="container">
        <div class="Logo">
            <a href="/">One Human's Adventures</a>
        </div>
        <nav>
            <Navigation />
        </nav>
    </div>
</header>