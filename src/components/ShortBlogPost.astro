---
const {url, title, desc, date, category} = Astro.props;
---

<style>
    .shortPost {
        display: flex;
    }
    .shortPost a {
        display: flex;
        width: 100%;
        padding: 32px 24px;
        position: relative;
        color: #000;
        text-decoration: none;
    }
    .shortPost:not(:last-child) a:after {
        content: '';
        width: 100%;
        height: 1px;
        background-color: #000;
        opacity: 0.2;
        position: absolute;
        bottom: 0;
        left: 0;
    }
    .shortPost a:hover .title {
        text-decoration: underline !important;
    }
    .shortPost a .title {
        display: flex;
        flex-grow: 1;
        font-size: 2em;
        font-weight: 600;
    }
    .shortPost a p {
        margin: 0px;
    }
    .shortPost .containerCategory {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        width: 96px;
    }
    .shortPost a .category {
        font-size: 0.7em;
        padding: 4px 6px;
        border-radius: 3px;
        text-transform: uppercase;
        line-height: 1.1em;
        background-color: #000;
        color: #fff;
    }
</style>

<li class="shortPost">
    <a href={url}>
        <div class="containerCategory">
            <p class="category">{category}</p>
        </div>
        <div class="containerInfo">
            <p class="date">{date}</p>
            <p class="title">{title}</p>
            <p class="description">{desc}</p>
        </div>
    </a>
</li>