---
const {url, title, desc, date, category} = Astro.props;
---

<style>

    .containerInfo {
        width: 100%;
    }
    .shortPost {
        display: flex;
    }
    .shortPost a {
        display: flex;
        width: 100%;
        padding: 32px 24px;
        position: relative;
        color: #000;
        text-decoration: none;
    }
    .shortPost:not(:last-child) a:after {
        content: '';
        width: 100%;
        height: 1px;
        background-color: #000;
        opacity: 0.2;
        position: absolute;
        bottom: 0;
        left: 0;
    }
    .shortPost a:hover .title {
        text-decoration: underline !important;
    }
    .shortPost a .title {
        display: flex;
        flex-grow: 1;
        font-size: 2em;
        font-weight: 600;
        padding-bottom: 16px;
    }
    .shortPost a p {
        margin: 0px;
    }
    .shortPost p.date {
        font-size: 0.85em;
        padding-bottom: 4px;
    }
    .shortPost .containerCategory {
        display: flex;
        justify-content: space-between;
        align-content: center;
    }
    .shortPost a .category {
        font-size: .7em;
        padding: 6px 12px;
        text-transform: uppercase;
        line-height: 1.1em;
        color: #fff;
        border: 1px solid var(--color-fg);
        letter-spacing: 1px;
    }
</style>

<li class="shortPost">
    <a href={url}>
        <div class="containerInfo">
            <p class="title">{title}</p>
            <div class="containerCategory">
                <p class="category">{category}</p>
                <p class="date">{date}</p>
            </div>
            <p class="description">{desc}</p>
        </div>
    </a>
</li>