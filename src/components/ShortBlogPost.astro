---
const {url, title, desc, date, tags, image} = Astro.props;
const maDate = date;
maDate.toLocaleDateString("fr");
const allTags = tags.toString().split(",");
---

<li class="shortPost">
    <div class="colContent">
        <div class="postDatas">
            <p class="date">{maDate}</p>
            <div class="tags">
                {allTags.map((tag) => <a class="tag" href={`/tags/${tag}`}>#{tag}</a>)}
            </div>
        </div>
        <a href={url} class="postTitle">
            <p class="title">{title}</p>
            <p class="description">{desc}</p>
        </a>
    </div>
    <div class="colImage">
        <a href={url}>
            <img src={image} />
        </a>
    </div>
</li>

<style>
    .shortPost {
        display: flex;
        position: relative;
        flex-direction: row;
        width: 100%;
        padding: 32px 24px;
        position: relative;
        color: #000;
    }
    .shortPost:not(:last-child):after {
        content: '';
        width: 100%;
        height: 1px;
        background-color: var(--color-fg);
        position: absolute;
        bottom: 0;
        left: 0;
        opacity: 0.15;
    }
    .shortPost .colContent {
        display: flex;
        flex-direction: column;
        gap: 12px;  
        width: 70%;
        padding-right: 24px;
    }
    .shortPost .postDatas {
        display: flex;
    }
    .shortPost p.date {
        font-size: .85em;
        padding-right: 8px;
    }
    .shortPost .postDatas .tags {
        padding-left: 8px;
        display: flex;
        list-style: none;
        position: relative;
    }
    .shortPost .postDatas .tags:before {
        content: '';
        width: 1px;
        height: 100%;
        background-color: var(--color-fg);
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        opacity: 0.15;
    }
    .shortPost .postDatas .tags .tag {
        padding-right: 8px;
        font-size: 0.9em;
        line-height: 1em;
        display: flex;
        align-items: center;
        color: #b38c40 !important;
        font-weight: 700;
        text-decoration: none;
    }
    .shortPost .postTitle {
        display: flex;
        flex-direction: column;
        gap: 8px;
        text-decoration: none;
    }
    .shortPost .title {
        font-family: Space Grotesk;
        font-weight: 500;
        font-size: 1.7em;
        line-height: 1em;
        padding-top: 4px;
    }
    .shortPost .description {
        opacity: 0.8;
    }
    .shortPost p {
        margin: 0px;
    }
    .shortPost .colImage {
        width: 30%;
    }
    .shortPost .colImage a {
        display: flex;
    }
    .shortPost .colImage img {
        width: 100%;
    }
    @media screen and (max-width: 768px) {
        .shortPost {
            padding: 24px 16px;
        }   
        .shortPost .title {
            font-size: 1.7em;
            padding-bottom: 8px;
        }  
    }
    @media screen and (max-width: 500px) {
        .shortPost .postDatas {
            flex-direction: column;
            gap: 6px;
        }
        .shortPost .postDatas .tags {
            padding-left: 0px;
        }
        .shortPost .postDatas .tags:before {
            display: none;
        }
        .shortPost .title {
            font-size: 1.5em;
        }
    }
</style>