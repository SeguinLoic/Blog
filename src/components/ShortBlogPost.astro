---
const {url, title, desc, date, tags, image} = Astro.props;
const allTags = tags.toString().split(",");
---

<li class="shortPost">
    <a href={url}>
        <div class="colContent">
            <div class="postDatas">
                <p class="date">{date}</p>
                <ul class="tags">{allTags.map((tag) => <li class="tag"><a href={`/tags/${tag}`}>{tag}</a></li>)}</ul>
            </div>
            <p class="title">{title}</p>
            <p class="description">{desc}</p>
        </div>
        <div class="colImage">
            <img src={image} />
        </div>
    </a>
</li>

<style>
    .shortPost {
        display: flex;
        position: relative;
    }
    .shortPost:not(:last-child):after {
        content: '';
        width: 100%;
        height: 1px;
        background-color: var(--color-fg);
        position: absolute;
        bottom: 0;
        left: 0;
        opacity: 0.15;
    }
    .shortPost a {
        display: flex;
        flex-direction: row;
        width: 100%;
        padding: 32px 24px;
        position: relative;
        color: #000;
        text-decoration: none;
    }
    .shortPost a::before {
        content: '';
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        background-color: var(--color-fg);
        transition: all 0.3s;
        opacity: 0;
        pointer-events: none;
    }
    .shortPost a:hover::before {
        opacity: 0.05;
    }
    .shortPost a .colContent {
        display: flex;
        flex-direction: column;
        gap: 8px;  
        width: 70%;
        padding-right: 24px;
    }
    .shortPost .postDatas {
        display: flex;
    }
    .shortPost p.date {
        font-size: .85em;
        padding-right: 8px;
    }
    .shortPost .postDatas .tags {
        padding-left: 8px;
        display: flex;
        list-style: none;
        position: relative;
    }
    .shortPost .postDatas .tags:before {
        content: '';
        width: 1px;
        height: 100%;
        background-color: var(--color-fg);
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        opacity: 0.15;
    }
    .shortPost .postDatas .tags .tag {
        padding-right: 8px;
        font-size: 0.9em;
        line-height: 1em;
        display: flex;
        align-items: center;
        opacity: 0.8;
    }
    .shortPost a .title {
        font-family: Space Grotesk;
        font-weight: 500;
        font-size: 1.7em;
        line-height: 1em;
        padding-top: 4px;
    }
    .shortPost a p {
        margin: 0px;
    }
    .shortPost a .description {
        opacity: 0.8;
    }
    .shortPost a .colImage img {
        width: 100%;
    }
    .shortPost a .colImage {
        width: 30%;
    }
    @media screen and (max-width: 768px) {
        .shortPost a {
            padding: 24px 16px;
            flex-direction: column;
        }   
        .shortPost a .title {
            font-size: 1.7em;
            padding-bottom: 8px;
        }  
    }
</style>