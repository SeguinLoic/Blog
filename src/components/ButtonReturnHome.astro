<a href="/" class="returnHome"><i></i></a>

<style>
    html#home a.returnHome {
        display: none;
    }
    a.returnHome {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        text-decoration: none;
        position: relative;
        aspect-ratio: 1/1;
        line-height: 0.6em !important;
        padding: 0px 24px;
        color: #fff !important;
    }
    a.returnHome:after {
        content: '';
        width: 1px;
        height: 100%;
        background-color: #fff;
        position: absolute;
        right: 0;
        top: 0;
        opacity: 0.2;
    }
    a.returnHome i {
        width: 13px;
        height: 13px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-right: 4px;
        position: relative;
    }
    a.returnHome i:before {
        content: '';
        width: 100%;
        height: 100%;
        mask-image: url(/icon-arrow.svg);
        background-color: #fff;
        position: absolute;
        pointer-events: none;
    }
    a.returnHome:before {
        content: '';
        width: 100%;
        height: 100%;
        background-color: #fff;
        position: absolute;
        left: 0;
        top: 0;
        opacity: 0;
        transition: all 0.3s;
        pointer-events: none;
    }
    a.returnHome:hover::before {
        opacity: 0.05;
    }
    @media screen and (max-width: 900px) {}
    @media screen and (max-width: 768px) {        
        a.returnHome {
            padding: 0px 16px;
        }
    }
    @media screen and (max-width: 672px) {
        a.returnHome:after {
            display:none;
        }
    }
</style>