import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import { Debug } from 'astro:components';

interface Props {
    image: string;
    name: string;
    author: string;
    note: string;
}

const { image, name, author, note} = Astro.props;
let newImage = image.split("../assets/livres/").split(".jpg");
const images = await Astro.glob("/src/assets/livres/*").then(files => {
  return files.map(file => file.default);
});
