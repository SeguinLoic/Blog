---
import { Image } from 'astro:assets';

const { image, alt, name, author, note} = Astro.props;
---

<li>
    <div class="couverture">
        <Image src={image} alt={alt} width="90px" />
    </div>
    <div class="contenu">
        {name} 
        <p class="auteur">{author}</p>
        <p class="note">"{note}"</p>
    </div>
</li>

<style>
    li {
        width: 100%;
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        font-weight: 600;
    }
    .couverture {
        max-width: 90px;
    }
    .couverture img {
        max-width: 90px;
        height: auto;
    }
    .contenu {
        display: flex;
        flex-direction: column;
        padding-left: 16px;
        gap: 8px;
    }
    p.auteur {
        font-weight: 400;
        font-size: .9em;
    }
    p.note {
        font-weight: 400;
        font-style: italic;
        font-size: .9em;
        line-height: 1.4em;
        padding-top: 8px;
    }
    @media screen and (max-width: 768px) {
        .contenu {
            padding-left: 12px;
        }
    }
</style>