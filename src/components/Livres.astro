---
import lectures from '../pages/lectures.json';

const { date } = Astro.props;
const books = lectures.filter((lecture) => lecture.year === date);
---

<ul>
    {books.map(book => (
        <li>
            <div class="couverture">
                <img src={`${book.image}`} />
            </div>
            <div class="contenu">
                {book.name} 
                <p class="auteur">{book.author}</p>
                <p class="note">"{book.note}"</p>
            </div>
        </li>
    ))}
</ul>

<style>
    ul {
        display: flex;
        list-style: none;
        padding: 0px;
        gap: 24px;
        margin: 0px;
        flex-direction: column;
        margin-bottom: 48px;
    }
    ul li {
        width: 100%;
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        font-weight: 600;
    }
    .couverture {
        height: auto;
    }
    ul li img {
        width: 90px;
    }
    .contenu {
        display: flex;
        flex-direction: column;
        padding-left: 16px;
        gap: 8px;
    }
    p.auteur {
        font-weight: 400;
        font-size: .9em;
    }
    p.note {
        font-weight: 400;
        font-style: italic;
        font-size: .9em;
        line-height: 1.4em;
        padding-top: 8px;
    }
    @media screen and (max-width: 768px) {
        .contenu {
            padding-left: 12px;
        }
    }
</style>