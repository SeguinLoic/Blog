---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ButtonReturnHome from '../components/ButtonReturnHome.astro';

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <div class="col-left">
        <div class="container">
            <Header />
            <div class="postIntro">
                <div class="containerTitle">
                  <ButtonReturnHome />
                  <p class="postTitle">{frontmatter.title}</p>
                </div>
                <p class="postDescription">{frontmatter.description}</p>
                <p class="postDate">Published on: {frontmatter.pubDate.toString().slice(0,10)}</p>
            </div>
        </div>
    </div>
    <div class="col-right">
        <div class="postContent">
            <slot />
        </div>
        <Footer />
    </div>
</BaseLayout>

<style>
  .postIntro {
    position: relative;
    padding: 56px;
  }
  .postIntro::after {
    content: "";
    width: 100%;
    height: 1px;
    background-color: var(--color-fg);
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0.13;
    pointer-events: none;
  }
  p.postTitle {
    font-family: 'Space Grotesk';
    font-size: 1.8em;
    font-weight: 600;
    margin: 0px;
    line-height: 1.2em;
  }
  p.postDescription {
    margin-top: 24px;
    margin-bottom: 0px;
    font-size: 1.1em;
  }
  p.postDate {
    font-size: 0.85em;
    margin-top: 4px;
  }
  .containerTitle {
    display: flex;
  }
  @media screen and (max-width: 768px) {
    .postIntro {
      padding-top: 0px;
  }
  }
</style>