---
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
const tags = frontmatter.tags; 
---

<BaseLayout pageTitle={frontmatter.title}>
    <div class="postIntro">
      <div class="containerTitle">
        <a href="/" class="returnHome">return</a>
        <p class="postTitle">{frontmatter.title}</p>
      </div>
      <p class="postDescription">{frontmatter.description}</p>
      <p class="postDate">Published on: {frontmatter.pubDate.toString().slice(0,10)}</p>
    </div>
    <slot />
</BaseLayout>

<style>
  a {
    color: #00539F;
  }
  .tags {
    display: flex;
    flex-wrap: wrap;
  }
  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }

  .postIntro {
    padding-bottom: 24px;
  }
  .postTitle {
    font-size: 1.6em;
    font-weight: 600;
  }

</style>