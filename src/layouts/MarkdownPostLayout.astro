---
import BaseLayout from './BaseLayout.astro';
import ButtonReturnHome from '../components/ButtonReturnHome.astro';

const { frontmatter } = Astro.props;
---

<style>
.postIntro {
    position: relative;
    padding-bottom: 24px;
    margin-bottom: 24px;
    padding-top: 56px;
  }
  .postIntro::after {
    content: "";
    width: 100%;
    height: 1px;
    background-color: var(--color-fg);
    position: absolute;
    left: 0;
    bottom: 0;
    opacity: 0.15;
    pointer-events: none;
  }
  p.postTitle {
    font-size: 1.8em;
    font-weight: 600;
    margin: 0px;
  }
  p.postDescription {
    margin-top: 24px;
    margin-bottom: 0px;
    font-size: 1.1em;
  }
  p.postDate {
    font-size: 0.85em;
    margin-top: 4px;
  }
  @media screen and (max-width: 768px) {
    .postIntro {
      padding-top: 0px;
  }
  }
</style>

<BaseLayout pageTitle={frontmatter.title}>
    <div class="postIntro">
        <ButtonReturnHome />
        <p class="postTitle">{frontmatter.title}</p>
        <p class="postDescription">{frontmatter.description}</p>
        <p class="postDate">Published on: {frontmatter.pubDate.toString().slice(0,10)}</p>
    </div>
    <div class="postContent">
        <slot />
    </div>
</BaseLayout>