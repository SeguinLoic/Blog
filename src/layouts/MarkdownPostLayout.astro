---
import BaseLayout from './BaseLayout.astro';
import Navigation from '../components/Navigation.astro';

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <div class="postNavigation">
        <a href="/" class="returnHome"></a>
        <Navigation />
    </div>
    <div class="postIntro">
        <p class="postTitle">{frontmatter.title}</p>
        <p class="postDescription">{frontmatter.description}</p>
        <p class="postDate">Published on: {frontmatter.pubDate.toString().slice(0,10)}</p>
    </div>
    <div class="postContent">
        <slot />
    </div>
</BaseLayout>

<style>

  .postNavigation {
      display: flex;
      align-items: center;
      margin-bottom: 24px;
      position: relative;
  }
  .postNavigation:after {
    content: '';
    width: 100%;
    height: 1px;
    background-color: var(--color-fg);
    position: absolute;
    bottom: 0;
    left: 0;
    opacity: 0.15;
    pointer-events: none;
  }
  .postNavigation .nav-links {
    display: flex;
    flex-grow: 1;
    justify-content: flex-end;
  }

  a.returnHome {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 32px;
    height: 32px;
    margin-right: 16px;
    text-decoration: none;
    position: relative;
  }
  a.returnHome:before {
    content: '';
    width: 20px;
    height: 20px;
    mask-image: url('/icon-arrow.svg');
    background-color: var(--color-fg);
    position: absolute;
    pointer-events: none;
  }
